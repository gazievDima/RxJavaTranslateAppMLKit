<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_marginVertical="5dp"
        android:background="@drawable/corner_bg_item_settings"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:paddingHorizontal="10dp"
        android:layout_height="70dp">

        <TextView
            android:gravity="center|start"
            android:textColor="@color/vct_black"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Initial language"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageButton
            android:layout_gravity="center"
            android:background="@drawable/bg_form_text"
            android:src="@drawable/ic_baseline_edit_24"
            android:id="@+id/btnChooseFromLang"
            android:layout_width="50dp"
            android:layout_height="30dp"
            app:tint="@color/vct_white" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_marginVertical="5dp"
        android:padding="10dp"
        android:background="@drawable/corner_bg_item_settings"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:paddingHorizontal="10dp"
        android:layout_height="70dp">

        <TextView
            android:gravity="center|start"
            android:textColor="@color/vct_black"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Language for translate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageButton
            android:layout_gravity="center"
            android:background="@drawable/bg_form_text"
            android:src="@drawable/ic_baseline_edit_24"
            android:id="@+id/btnChooseToLang"
            android:layout_width="50dp"
            android:layout_height="30dp"
            app:tint="@color/vct_white" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>